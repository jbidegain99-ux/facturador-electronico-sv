# =============================================================================
# DATABASE
# =============================================================================
# For Azure SQL Server:
DATABASE_URL=sqlserver://your-server.database.windows.net:1433;database=facturador;user=admin;password=your-password;encrypt=true;trustServerCertificate=false

# For PostgreSQL (local development):
# DATABASE_URL=postgresql://user:pass@localhost:5432/facturador

# =============================================================================
# REDIS (Required for BullMQ job queues)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# HACIENDA API (Ministerio de Hacienda)
# =============================================================================
MH_API_BASE_URL=https://apitest.dtes.mh.gob.sv
MH_NIT=
MH_NRC=
MH_PASSWORD_PRIVADO=
MH_API_ENV=test

# =============================================================================
# CERTIFICATES
# =============================================================================
CERT_PATH=./certs/certificado.p12
CERT_PASSWORD=

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET=your-jwt-secret-min-32-chars
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars

# =============================================================================
# EMAIL CONFIGURATION (for email adapters)
# =============================================================================
# Encryption key for storing email credentials (32 bytes, base64)
ENCRYPTION_KEY=your-32-byte-encryption-key-base64

# Microsoft 365 OAuth (if using M365 adapter)
M365_CLIENT_ID=
M365_CLIENT_SECRET=
M365_REDIRECT_URI=http://localhost:3001/api/v1/email-config/oauth/microsoft/callback

# Google Workspace OAuth (if using Google adapter)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/api/v1/email-config/oauth/google/callback

# =============================================================================
# AZURE DEPLOYMENT (for deploy script)
# =============================================================================
ACR_NAME=facturadorsvacr
RESOURCE_GROUP=facturador-sv-rg
API_APP_NAME=facturador-api-sv
WEB_APP_NAME=facturador-web-sv

# =============================================================================
# FRONTEND
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
